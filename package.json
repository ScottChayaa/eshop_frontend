{
  "name": "eshop_frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Vue3 前端購物網站開發專案 - 基於Vue3的現代化電商前端應用",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "json-server": "json-server --watch db.json --port 8080",
    "mock-server": "json-server --watch src/mocks/db.json --port 8080",
    "check-js-errors": "node scripts/check-js-errors.js",
    "check-errors": "node scripts/check-errors-simple.js"
  },
  "dependencies": {
    "@mdi/font": "^7.3.67",
    "axios": "^1.6.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vuetify": "^3.4.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "jsdom": "^26.1.0",
    "json-server": "^1.0.0-beta.3",
    "msw": "^2.10.4",
    "node-fetch": "^3.3.2",
    "prettier": "^3.1.1",
    "puppeteer": "^24.14.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^1.8.25"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
